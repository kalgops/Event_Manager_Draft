<%- include('partials/header', { title:'Login' }) %>

<h1 class="text-2xl font-bold mb-4">Organiser Login</h1>
<% if (error){ %><p class="text-red-600 mb-4"><%= error %></p><% } %>

<form method="post" action="/login" class="space-y-4 max-w-sm">
  <input type="hidden" name="next" value="<%= next %>">

  <label class="block">
    <span class="mr-2">Username:</span>
    <input name="username" class="border px-2 py-1 rounded w-full">
  </label>

  <label class="block">
    <span class="mr-2">Password:</span>
    <input type="password" name="password"
           class="border px-2 py-1 rounded w-full">
  </label>

  <button class="btn bg-blue-600 text-white px-4 py-2 rounded">Log in</button>
</form>

<%- include('partials/footer') %>
