<%- include('partials/header', { title: 'Login' }) %>

<div class="max-w-md mx-auto py-12">
  <h2 class="text-2xl font-bold mb-4">Login</h2>
  <% if (errors.length) { %>
    <ul class="text-red-600 mb-4">
      <% errors.forEach(msg => { %>
        <li><%= msg %></li>
      <% }) %>
    </ul>
  <% } %>
  <form action="/auth/login" method="POST" class="space-y-4">
    <div>
      <label class="block">Username</label>
      <input name="username" class="w-full border px-2 py-1" required>
    </div>
    <div>
      <label class="block">Password</label>
      <input type="password" name="password" class="w-full border px-2 py-1" required>
    </div>
    <button type="submit"
            class="btn bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
      Log In
    </button>
  </form>
</div>

<%- include('partials/footer') %>
