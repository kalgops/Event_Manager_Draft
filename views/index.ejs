<%- include('partials/header', { title: 'Welcome' }) %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50">
  <!-- Hero Section -->
  <div class="container mx-auto px-4 py-16">
    <div class="text-center mb-16">
      <div class="mb-8">
        <i class="fas fa-calendar-check text-6xl text-blue-600 mb-4"></i>
      </div>
      <h1 class="text-5xl font-bold text-gray-900 mb-6">
        Event Manager Pro
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        The complete solution for managing and attending events. Whether you're organizing 
        workshops, conferences, or social gatherings, we've got you covered.
      </p>
    </div>

    <!-- Quick Access Cards -->
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Organiser Card -->
      <div class="bg-white rounded-2xl shadow-xl p-8 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="text-center">
          <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6">
            <i class="fas fa-user-tie text-2xl text-blue-600"></i>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Event Organiser</h2>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Create, manage, and publish your events. Track bookings, manage tickets, 
            and analyze your event performance.
          </p>
          <div class="space-y-3 text-sm text-gray-500 mb-8">
            <div class="flex items-center justify-center">
              <i class="fas fa-check text-green-500 mr-2"></i>
              Create unlimited events
            </div>
            <div class="flex items-center justify-center">
              <i class="fas fa-check text-green-500 mr-2"></i>
              Manage ticket types & pricing
            </div>
            <div class="flex items-center justify-center">
              <i class="fas fa-check text-green-500 mr-2"></i>
              Track bookings & analytics
            </div>
          </div>
          <a href="/organiser" 
             class="inline-block w-full bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors duration-200 font-medium">
            <i class="fas fa-arrow-right mr-2"></i>
            Go to Organiser Dashboard
          </a>
        </div>
      </div>

      <!-- Attendee Card -->
      <div class="bg-white rounded-2xl shadow-xl p-8 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="text-center">
          <div class="bg-green-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6">
            <i class="fas fa-users text-2xl text-green-600"></i>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Event Attendee</h2>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Discover upcoming events, view detailed information, and book 
            your tickets quickly and securely.
          </p>
          <div class="space-y-3 text-sm text-gray-500 mb-8">
            <div class="flex items-center justify-center">
              <i class="fas fa-check text-green-500 mr-2"></i>
              Browse available events
            </div>
            <div class="flex items-center justify-center">
              <i class="fas fa-check text-green-500 mr-2"></i>
              View event details & pricing
            </div>
            <div class="flex items-center justify-center">
              <i class="fas fa-check text-green-500 mr-2"></i>
              Quick & easy booking
            </div>
          </div>
          <a href="/attendee" 
             class="inline-block w-full bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition-colors duration-200 font-medium">
            <i class="fas fa-arrow-right mr-2"></i>
            Browse Events
          </a>
        </div>
      </div>
    </div>

    <!-- Features Section -->
    <div class="mt-20 text-center">
      <h3 class="text-3xl font-bold text-gray-900 mb-12">Why Choose Event Manager Pro?</h3>
      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="p-6">
          <div class="bg-purple-100 rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-bolt text-purple-600"></i>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 mb-2">Lightning Fast</h4>
          <p class="text-gray-600">Quick setup and instant event publishing. Get your events live in minutes.</p>
        </div>
        
        <div class="p-6">
          <div class="bg-yellow-100 rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-shield-alt text-yellow-600"></i>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 mb-2">Secure & Reliable</h4>
          <p class="text-gray-600">Your data is safe with enterprise-grade security and reliable hosting.</p>
        </div>
        
        <div class="p-6">
          <div class="bg-red-100 rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-heart text-red-600"></i>
          </div>
          <h4 class="text-lg font-semibold text-gray-900 mb-2">User Friendly</h4>
          <p class="text-gray-600">Intuitive interface designed for both organizers and attendees.</p>
        </div>
      </div>
    </div>

    <!-- Statistics Section -->
    <div class="mt-20 bg-white rounded-2xl shadow-lg p-8 max-w-4xl mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">500+</div>
          <div class="text-gray-600">Events Created</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-green-600 mb-2">10K+</div>
          <div class="text-gray-600">Tickets Booked</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-purple-600 mb-2">50+</div>
          <div class="text-gray-600">Active Organisers</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-yellow-600 mb-2">99%</div>
          <div class="text-gray-600">Uptime</div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>