<%- include('partials/header', { title: 'Add User' }) %>

<h1 class="text-2xl font-bold mb-4">Add User</h1>

<% if (error) { %>
  <p class="text-red-600 mb-4"><%= error %></p>
<% } %>

<form action="/users/add" method="post" class="space-y-4">
  <label class="block">
    <span class="mr-2">User:</span>
    <input id="user" type="text" name="user_name"
           class="border px-2 py-1 rounded">
  </label>
  <button class="btn">Create a new user record</button>
</form>

<%- include('partials/footer') %>
