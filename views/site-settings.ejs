<%- include('partials/header', { title:'Site Settings' }) %>

<h1 class="text-2xl font-bold mb-4">Site Settings</h1>
<% if (errors.length) { %>
  <div class="mb-4 p-3 bg-red-100 text-red-700 rounded">
    <ul class="list-disc list-inside">
      <% errors.forEach(e=>{ %><li><%= e %></li><% }) %>
    </ul>
  </div>
<% } %>

<form action="/organiser/settings" method="post" class="space-y-4 mb-4">
  <div>
    <label class="block mb-1 font-medium">Name</label>
    <input name="name" value="<%= settings.name %>"
           class="w-full border px-3 py-2 rounded"/>
  </div>
  <div>
    <label class="block mb-1 font-medium">Description</label>
    <textarea name="description"
              class="w-full border px-3 py-2 rounded"><%= settings.description %></textarea>
  </div>
  <button type="submit"
          class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition">
    Save
  </button>
</form>

<a href="/organiser" class="text-blue-600 hover:underline">&larr; Back</a>

<%- include('partials/footer') %>
